{
  "name": "@amoutonbrady/tiny-http",
  "version": "0.4.0",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/amoutonbrady/tiny-http.git"
  },
  "exports": {
    ".": {
      "require": "./dist/http.common.js",
      "import": "./dist/http.module.js",
      "default": "./dist/http.module.js",
      "browser": "./dist/http.module.js"
    }
  },
  "description": "A tiny client side HTTP client, light and extensible",
  "main": "dist/http.common.js",
  "module": "dist/http.module.js",
  "browser": "dist/http.min.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && rollup -c && tsc",
    "prepack": "yarn build && yarn test",
    "test": "uvu -r esm -r ts-node/register tests",
    "changelog": "gitmoji-changelog",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "http",
    "light",
    "typescript",
    "dependencies free"
  ],
  "author": "Alexandre Mouton-Brady <amoutonbrady@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-typescript": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/node": "^14.14.6",
    "@types/node-fetch": "^2.5.7",
    "esm": "^3.2.25",
    "gitmoji-changelog": "^2.1.0",
    "node-fetch": "^2.6.1",
    "prettier": "^2.1.2",
    "rollup": "^2.33.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5",
    "uvu": "^0.4.0"
  }
}
